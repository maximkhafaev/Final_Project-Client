<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/BSH_result_LL"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ProgressBar
            android:id="@+id/loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:indeterminate="true"
            android:visibility="visible"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/BSH_res_testname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="4"
            android:fontFamily="@font/inter_medium"
            android:text="@string/empty"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#49454F"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/BSH_res_isSuccessful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/inter"
        android:text="@string/empty"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#49454F"
        android:textSize="16sp"
        android:textStyle="italic"
        />

    <LinearLayout
        android:id="@+id/BSH_res_LL_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/BSH_res_your_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="@string/your_result"
            android:textColor="#49454F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/BSH_res_user_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="@string/empty"
            android:textColor="#49454F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/BSH_fin_slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="@string/slash"
            android:textColor="#49454F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/BSH_res_max_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="@string/empty"
            android:textColor="#49454F"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/BSH_res_LL_need_correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/BSH_res_need"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="@string/need_text_3"
            android:textSize="16sp"
            android:textColor="#49454F"
            />

        <TextView
            android:id="@+id/BSH_res_required_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="@string/empty"
            android:textSize="16sp"
            android:textColor="#49454F"
            />

        <TextView
            android:id="@+id/BSH_res_need_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/inter"
            android:text="@string/need_text_2"
            android:textSize="16sp"
            android:textColor="#49454F"
            />
    </LinearLayout>

    <Button
        android:id="@+id/BSH_start_testBttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#E8DEF8"
        android:fontFamily="@font/inter_medium"
        android:text="@string/back_to_tests"
        android:textColor="#1D192B"
        android:textAllCaps="true"
        android:textSize="14sp"
        />

</LinearLayout>